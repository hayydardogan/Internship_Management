@model Internship_Management.Models.Entity.TBL_Ogrenciler
@{
    Layout = null;
}

<!DOCTYPE html>
<html :class="{ 'theme-dark': dark }" x-data="data()" lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/site-template/public/assets/css/tailwind.output.css" />
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
            defer></script>
    <script src="~/site-template/public/assets/js/init-alpine.js"></script>
</head>
<body>
    <div class="flex items-center min-h-screen p-6 bg-gray-50 dark:bg-gray-900">
        <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
            <div class="flex flex-col overflow-y-auto md:flex-row">
                <div class="h-32 md:h-auto md:w-1/2">
                    <img aria-hidden="true"
                         class="object-cover w-full h-full dark:hidden"
                         src="~/site-template/public//assets/img/login-office.jpeg"
                         alt="Office" />
                    <img aria-hidden="true"
                         class="hidden object-cover w-full h-full dark:block"
                         src="~/site-template/public//assets/img/login-office-dark.jpeg"
                         alt="Office" />
                </div>
                <div class="flex items-center justify-center p-6 sm:p-12 md:w-1/2">
                    <div class="w-full">
                        <h1 class="mb-4 text-xl font-semibold text-gray-700 dark:text-gray-200">
                            Giriş Yap
                        </h1>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <label class="block text-sm">
                                <span class="text-gray-700 dark:text-gray-400">Öğrenci Numarası</span>
                                @Html.TextBoxFor(x => x.ogrenciNo, new { @class = "block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input", placeholder = "123456789" })

                            </label>
                            <label class="block mt-4 text-sm">
                                <span class="text-gray-700 dark:text-gray-400">Şifre</span>
                                @Html.TextBoxFor(x => x.ogrenciSifre, new { @class = "block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input", placeholder = "****", type = "password" })
                            </label>
                            if (TempData["wrongUser"] != null)
                            {
                                <p class="mt-2" style="color:red;">Kullanıcı adı veya şifre hatalı.</p>
                            }

                            <!-- You should use a button here, as the anchor is only used for the example  -->
                            <button class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                                Giriş Yap
                            </button>
                        }

                        <hr class="my-8" />




                        <p class="mt-4">
                            <a class="text-sm font-medium text-purple-600 dark:text-purple-400 hover:underline"
                               href="./forgot-password.html">
                                Şifremi Unuttum
                            </a>
                        </p>
                        <p class="mt-1">
                            <a class="text-sm font-medium text-purple-600 dark:text-purple-400 hover:underline"
                               href="/Register/Index">
                                Hesap Oluştur
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

